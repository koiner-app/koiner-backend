{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "ES2017",
    "outDir": "dist"
  },
  "include": [
    "main.ts",
    "mesh/**/*"
  ],
  "exclude": ["node_modules"]
}
